{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Python: Current File",
      "type": "debugpy",
      "request": "launch",
      "program": "${file}",
      "console": "integratedTerminal",
      "env": {
        "LOG_LEVEL": "INFO",
        "LOG_TIME": "false"
      },
      "justMyCode": false
    },
    {
      "name": "Pytest: Current Test File",
      "type": "debugpy",
      "request": "launch",
      "module": "pytest",
      "args": [
        "${file}",
        "-s"
      ],
      "console": "integratedTerminal",
      "justMyCode": false
    },
  ]
}